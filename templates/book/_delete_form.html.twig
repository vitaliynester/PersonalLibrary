<form method="POST" action="{{ path('book_delete', {'id': book.id}) }}"
      onsubmit="return confirm('Вы уверены, что хотите удалить данную книгу?');">
    <input type="hidden" name="_token" style="width: 0; height: 0" value="{{ csrf_token('delete' ~ book.id) }}">
    <button class="btn btn-danger mt-2 mb-3 w-100">Удалить книгу</button>
</form>
